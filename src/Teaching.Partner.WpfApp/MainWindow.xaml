<Window x:Class="Teaching.Partner.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Teaching.Partner.WpfApp"
        mc:Ignorable="d"
        Title="班级管理" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="作业">
                <MenuItem x:Name="JobFolderOpen" Header="检查作业" Click="JobFolderOpen_Click" Icon="{materialDesign:PackIcon Kind=FolderOpen}" />
                <Separator />
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabClasses" Grid.Row="1" Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
        </TabControl>
    </Grid>
</Window>
