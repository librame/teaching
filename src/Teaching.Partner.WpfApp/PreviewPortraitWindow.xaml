<Window x:Class="Teaching.Partner.WpfApp.PreviewPortraitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teaching.Partner.WpfApp"
        mc:Ignorable="d"
        Title="预览头像" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbkTitle" Grid.Row="0" VerticalAlignment="Center" Margin="10">
        </TextBlock>

        <Image x:Name="imgPortrait" Grid.Row="1" />
    </Grid>
</Window>
